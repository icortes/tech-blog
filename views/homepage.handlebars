<h4 class="mt-3">All Posts:</h4>
{{#each blogPosts as |blogPost|}}
<div class="card mt-3">
  <h5 class="card-header"><a href='/blogpost/{{id}}'>{{title}}</a></h5>
  <div class="card-body">
    <p class="card-text">{{content}}</p>
  </div>
  <div class="card-footer text-muted">Posted by {{user.name}} on {{format_date date_created}}</div>
</div>
{{/each}}