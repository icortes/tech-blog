<div class='row mt-3'>
  <div class='col'>
    <div class='card'>
      <h5 class='card-header'>{{title}}</h5>
      <div class='card-body'>
        <p class='card-text'>{{content}}</p>
      </div>
      <div class='card-footer text-muted'>Posted by
        {{user.name}}
        on
        {{format_date date_created}}</div>
    </div>
  </div>
</div>

<div class='row mt-3'>
  <div class='col'>
    {{#if comments.length}}
      <h4>Comments:</h4>
      {{#each comments as |comment|}}

        <div class='card mt-3'>
          <div class='card-body'>
            <blockquote class='blockquote mb-0'>
              <p>{{comment.content}}</p>
              <footer class='blockquote-footer'><cite title='Source Title'>
                  {{user.name}}
                </cite>
                on
                {{format_date comment.date_created}}
              </footer>
            </blockquote>
          </div>
        </div>

      {{/each}}
    {{/if}}
  </div>
</div>

<div class='row mt-5'>
  <div class='col'>
    <form class='form new-comment-form'>
      <div class='form-group'>
        <label for='new-comment'>New Comment:</label>
        <textarea class='form-control' id='new-comment' rows='3'></textarea>
      </div>
      <button type='submit' class='btn btn-primary'>Submit</button>
    </form>
  </div>
</div>

<script src='/js/blogpost.js'></script>